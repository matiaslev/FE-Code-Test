<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:background="@color/colorAccent"
    android:layout_marginTop="@dimen/margin_32"
    app:cardElevation="@dimen/elevation_5"
    app:cardCornerRadius="@dimen/radius_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="@string/drink_name"
                android:textSize="@dimen/text_size_20"
                android:paddingTop="@dimen/padding_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/drinkName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_200"
                app:srcCompat="@drawable/ic_drink_placeholder"
                android:id="@+id/drinkThumb"
                android:padding="@dimen/padding_20"
                app:layout_constraintTop_toBottomOf="@+id/drinkName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
