<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar" >

        <ImageView
                android:layout_width="@dimen/width_20"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_back"
                android:id="@+id/backArrow"/>

        <TextView
                android:text="@string/drink_name"
                android:gravity="center_horizontal"
                android:textColor="@color/colorAccent"
                android:layout_marginEnd="@dimen/toolbar_title_margin_considering_back_arrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbarTittle"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/margin_20"
                    app:cardElevation="@dimen/elevation_5"
                    app:cardCornerRadius="@dimen/radius_10"
                    android:background="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_200"
                            android:layout_margin="@dimen/margin_10"
                            app:srcCompat="@drawable/ic_drink_placeholder"
                            android:id="@+id/drinkThumb"
                            android:visibility="invisible"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                            android:text="@string/ingredientswithmeasures"
                            android:layout_width="@dimen/zero"
                            android:layout_height="wrap_content"
                            android:id="@+id/ingredientsWithMeasures"
                            android:textSize="@dimen/text_size_16"
                            android:visibility="invisible"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="@dimen/margin_8"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="@dimen/margin_8"
                            android:layout_marginTop="@dimen/margin_8"
                            app:layout_constraintTop_toBottomOf="@+id/drinkThumb"/>

                    <TextView
                            android:text="@string/how_to_prepare"
                            android:layout_width="@dimen/zero"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_20"
                            android:id="@+id/howToPrepare"
                            android:visibility="invisible"
                            android:layout_marginTop="@dimen/margin_24"
                            app:layout_constraintTop_toBottomOf="@+id/ingredientsWithMeasures"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="@dimen/margin_8"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="@dimen/margin_8"/>

                    <TextView
                            android:text="@string/instructions"
                            android:layout_width="@dimen/zero"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_16"
                            android:id="@+id/instructions"
                            android:visibility="invisible"
                            android:layout_marginTop="@dimen/margin_32"
                            app:layout_constraintTop_toBottomOf="@+id/howToPrepare"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="@dimen/margin_8"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="@dimen/margin_8"
                            android:layout_marginBottom="@dimen/margin_32"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    <ProgressBar
                            style="?android:attr/progressBarStyle"
                            android:indeterminateTint="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/progressBar"
                            android:visibility="visible"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="@dimen/margin_8"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="@dimen/margin_8"
                            android:layout_marginTop="@dimen/margin_8"
                            app:layout_constraintTop_toTopOf="@+id/drinkThumb"
                            android:layout_marginBottom="@dimen/margin_8"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
